.graphGlobalContainer.col-xs-12(ng-class="graph")
    .divider

    p.text-uppercase.text-bold.text-xl.inline(translate="{{ graph }}")

    span(ng-switch="graph")
        span.topicRepeatContainer(ng-switch-when="topicCoincidence")
            div.topicGlobalContainer(ng-repeat="topic in topics" etv-scroll-on-load="{{ $index == 0 }}")
                div.shareButtons.topicCoincidence(ng-class="{ 'goToRight': $first }")
                    .downloadContainer.inline
                        span(translate="download")
                        i.mdi.mdi-arrow-down-bold-circle-outline(ng-click="downloadGraph(graph + topic._id)")
                        i.mdi.mdi-close(ng-if="$first" ng-click="toggleGraph(graph, true)")
                    //span.text-divider &nbsp;&nbsp;|&nbsp;&nbsp;
                .graphContainer.topicCoincidenceGraph(etv-topic-coincidence-graph="{{ topic._id }}" id="{{ graph + topic._id }}")

        span(ng-switch-default="" etv-scroll-on-load="")
            div.shareButtons
                .downloadContainer.inline
                    span(translate="download")
                    i.mdi.mdi-arrow-down-bold-circle-outline(ng-click="downloadGraph(graph)")
                    i.mdi.mdi-close(ng-click="toggleGraph(graph, true)")
                //span.text-divider &nbsp;&nbsp;|&nbsp;&nbsp;
            span(ng-switch="graph")
                .graphContainer(ng-switch-when="partyCoincidence" etv-party-coincidence-graph="" id="{{ graph }}")
                .graphContainer(ng-switch-when="location" etv-location-graph="" id="{{ graph }}")
                .graphContainer(ng-switch-when="parlamentaryRepresentation" etv-parlamentary-representation-graph="" id="{{ graph }}")
    .divider