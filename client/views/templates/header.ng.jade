header(ng-class="{ 'headerFixed': isHeaderFixed }")
    .fullWidth(layout="row", layout-align="space-between start")
        div#socialButtons(flex, layout="row", layout-align="start start")
           md-button.md-icon-button(ng-click="socialClick('facebook')")
               i.mdi.mdi-facebook
           md-button.md-icon-button(ng-click="socialClick('twitter')")
               i.mdi.mdi-twitter
        div(flex, layout="row", layout-align="center start")
           a(ui-sref="welcome")
               img#mainHeaderLogo(src="/images/logo.png", ng-class="{ reducedLogoSize: isLogoCompact }")
        div(flex, layout="row", layout-align="end start")
           a(ng-click="setLanguage('ca')", ng-if="!isCompact") catal√†
           span.text(ng-if="!isCompact") &nbsp;|&nbsp;
           a(ng-click="setLanguage('es')", ng-if="!isCompact") castellano
           md-button#menuButton.md-icon-button(ng-if="isCompact", ng-click="toggleNav()")
               i.mdi.mdi-menu